@model FE.Identity.Models.Cotizaciones

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cotizaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Servicio</label>
                <select asp-for="IdServicio" class ="form-control" asp-items="ViewBag.IdServicio"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha</label>
                <input asp-for="FechaCotizacion" class="form-control" />
                <span asp-validation-for="FechaCotizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio Cotizacion</label>
                <input asp-for="PrecioCotizacion" class="form-control" />
                <span asp-validation-for="PrecioCotizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
